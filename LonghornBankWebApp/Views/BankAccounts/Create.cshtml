@model LonghornBankWebApp.Models.BankAccount

@{
    ViewData["Title"] = "Create";
}

<h1>Create a Bank Account (Checkings, Savings, or IRA)</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            @*UNDERSTAND: how does this work? why do we need to do this and why can't we just do m.User'*@
            @Html.HiddenFor(m => m.User.UserName)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BankAccountName" class="control-label"></label>
                <input asp-for="BankAccountName" class="form-control" value=@Model.BankAccountName/>
                <span asp-validation-for="BankAccountName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BankAccountType" class="control-label"></label>
                <select asp-for="BankAccountType" asp-items="Html.GetEnumSelectList<BankAccountTypes>()" class="form-control" value =@Model.BankAccountType></select>
                <span asp-validation-for="BankAccountType" class="text-danger"></span>
            </div>
            <!-- TODO: make type a dropdown -->

            <div class="form-group">
                <label asp-for="InitialDeposit" class="control-label"></label>
                <input asp-for="InitialDeposit" class="form-control" value=@Model.InitialDeposit/>
                <span asp-validation-for="InitialDeposit" class="text-danger"></span>
            </div>
            
            <!-- TODO: make this a number entry -->
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

