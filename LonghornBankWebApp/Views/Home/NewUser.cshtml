<h1 class="text-center py-6"> Apply for an Account</h1>
<p class="lead text-center">You must enroll for an eligible account to access site features</p>
<hr />

@section containerbottom{

    <div class="container min-vh-100 mt-4">
        <div class="row text-center py-6">
            <div class="col">
                <div class="card text-white" style="max-width: 100%;background-color:#00a9b7">
                    <div class="card-header">Checkings, Savings, or IRA</div>
                    <div class="card-body">
                        <a asp-action="Create" asp-controller="BankAccounts" class="btn btn-primary">Apply</a>

                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white" style="max-width: 100%;background-color:#a6cd57">
                    <div class="card-header">Stock Portfolio Account</div>
                    <div class="card-body">
                        <a asp-action="Create" asp-controller="StockPortfolio" class="btn btn-primary">Apply</a>
                    </div>
                </div>
            </div>
        </div>      
    </div>
}
