@model LonghornBankWebApp.Models.StockPortfolio

@{
    ViewData["Title"] = "Create";
}

<h1>Create a Stock Portfolio</h1>

<hr />


@section containerbottom{

    <div class="container min-vh-100 mt-4">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                    <div class="form-group py-3">
                        <label class="control-label">Portfolio Name</label>
                        <input name="name" class="form-control" />
                        @*<span asp-validation-for="PortfolioName" class="text-danger"></span>*@
                    </div>

                    <div class="form-group">
                        <label class="control-label">Initial Deposit</label>
                        <input name="init_depo" type="number" class="form-control" />
                        <span style="color:red">@ViewBag.msg</span>
                        @*<span asp-validation-for="PortfolioName" class="text-danger"></span>*@
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="py-3">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
}



