@model LonghornBankWebApp.Models.StockPortfolio

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Nickname</h1>
<hr />
    @if(ViewBag.Message != null){
        <div class="alert alert-warning" role="alert">
            @ViewBag.Message
        </div>
    }

@section containerbottom{

    <div class="container min-vh-100 mt-4">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="StockPortfolioID" />
                    <div class="form-group my-4">
                        <label asp-for="PortfolioName" class="control-label"></label>
                        <input asp-for="PortfolioName" class="form-control" />
                        <span asp-validation-for="PortfolioName" class="text-danger"></span>
                    </div>
                    <div class="form-group my-4">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" asp-controller="BankAccounts">Back</a>
        </div>
    </div>
}


