@model IEnumerable<LonghornBankWebApp.Models.StockType>

@{
    ViewData["Title"] = "Index";
}

<h1>Stock Types</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
@section containerbottom{

    <div class="container min-vh-100 mt-4">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StockTypeName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StockTypeName)
                        </td>
                        <td>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.StockTypeID">Edit</a>

                            }
                            <a asp-action="Details" asp-route-id="@item.StockTypeID">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

